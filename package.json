{
  "name": "TypeScriptNodeApi",
  "version": "1.0.0",
  "description": "A typescript Nodejs Api",
  "main": "server.js",
  "author": "Anwar kamal",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server.js",
    "public:copy": "ncp ./src/public/ ./dist/public/",
    "views:copy": "ncp ./src/views/ ./dist/views/",
    "start:dev": "tsc &&  env-cmd -f ./config/.env node ./dist/server.js",
    "clean": "rimraf ./dist",
    "build:prod": "yarn run clean && tsc && yarn run public:copy && yarn run views:copy",
    "build": "yarn public:copy && yarn views:copy",
    "dev": "nodemon ./src/server.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/mongoose": "^5.5.17",
    "@types/pug": "^2.0.4",
    "env-cmd": "^10.0.1",
    "nodemon": "^1.19.2",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.7.1",
    "ncp": "^2.0.0",
    "pug": "^2.0.4"
  }
}